[flake8]
# Comma-separated list of folders to exclude from checks.
exclude =
    .git,
    __pycache__,
    venv/

# Set the max line length, consistent with your CI file.
max-line-length = 127

# Optional: Ignore specific error codes if you find them too noisy.
# For example, to ignore the "line too long" error:
# ignore = E501
